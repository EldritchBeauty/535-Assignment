        <div class="row my-4 justify-content-evenly align-items-center">
            <div class="card TextBackground BGColour4 TextColour1 justify-content-evenly">
                <label asp-for="user" class="control-label">Username: </label>
                <input asp-for="user" class="form-label" />
                <span asp-validation-for="user" class="text-danger"></span>
            </div>
        </div>
        <div class="row my-4 justify-content-evenly align-items-center">
            <div class="card TextBackground BGColour4 TextColour1 justify-content-evenly">
                <label asp-for="password" class="control-label">Password: </label>
                <input asp-for="password" type="password" class="form-label" />
                <span asp-validation-for="password" class="text-danger pb-1"></span>
            </div>
        </div>
        <div class="row justify-content-center align-items-center d-flex">
            <div class="col d-flex justify-content-center align-items-center">
                <button type="submit" class="rounded d-flex TextBackground BGColour4 TextColour1 justify-content-evenly align-items-center">
                    Register
                </button>
            </div>
        </div>
    </form>
    <footer class="row my-4">
        <div class="col-4">
            <a asp-action="Login" class="link-danger BGColour4 p-1 rounded">Login Instead?</a>
